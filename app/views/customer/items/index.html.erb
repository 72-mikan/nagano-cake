<%= render '/layouts/customer_header' %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル検索</h2>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <p>(全<%= @item_count %>件)</p>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
            <% if item.is_active == true %>
              <div class="col-md-3", style="margin: 5px">
                <p><%= image_tag item.get_image(200,100) %></p>
                <p><%= item.name %></p>
                <p>￥<%= (item.price * @tax).round %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>