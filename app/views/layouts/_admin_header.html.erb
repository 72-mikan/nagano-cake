<div class="container">
  <div class="row">
    <div class="">
      <%= form_with url: admin_items_path, method: :get do |f| %>
        <%= f.text_field :item_name %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
</div>

<% if admin_signed_in? %>
  <li class="nav-item">
    <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark'  %>
  </li>
  <li class="nav-item">
    <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark'  %>
  </li>
  <li class="nav-item">
    <%= link_to "注文履歴一覧", admin_orders_path, class: 'nav-link text-dark'  %>
  </li>
  <li class="nav-item">
    <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark'  %>
  </li>
  <li class="nav-item">
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to "About", root_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "商品一覧", root_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
    <%= link_to "ログイン", new_admin_session_path, class: 'nav-link text-dark' %>
  </li>
<% end %>
