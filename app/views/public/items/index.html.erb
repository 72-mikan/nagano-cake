<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <div class="col text-center">
          <h2 class="test">ジャンル検索</h2>
          <div class="border border-dark p-4">
            <div><%= link_to '全て', items_path %></div>
            <% @genres.each do |genre| %>
              <div>
                <%= link_to genre.name, items_path(name: genre.name) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <h2><%= '商品一覧(' + @genre_type + ')' %></h2>
      <p>(全<%= @item_count %>件)</p>
      <div class="container-fluid">
        <div class="row">
          <% @items.each do |item| %>
            <% if item.is_active == true %>
              <div class="card m-2 d-block" style="width: 16rem;">
                <%= link_to item_path(item.id) do %>
                  <div class="card-header p-0">
                    <%= image_tag item.get_image(200,200), class: "card-img-top" %>
                  </div>
                <% end %>
                <div class="card-body px-2 py-3">
                  <h5 class="card-title"><%= link_to item.name, item_path(item.id) %></h5>
                  <p class="card-text">￥<%= item.with_tax_price %> (税込価格)</p>
                  <a href="#" class="btn btn-primary">カートに追加</a>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>